{
  "multipart": [
    {"apply": { "model": "zrm:block/post_medium_midsection" }},
    {
      "when": { "footer": "true" },
      "apply": { "model": "zrm:block/post_medium_footer" }
    },

    {
      "when": { "down": "thick|medium" },
      "apply": { "model": "zrm:block/post_medium_extension", "x": 90 }
    },
    {
      "when": { "up": "thick|medium" },
      "apply": { "model": "zrm:block/post_medium_extension", "x": 270 }
    },
    {
      "when": { "north": "thick|medium" },
      "apply": { "model": "zrm:block/post_medium_extension" }
    },
    {
      "when": { "east": "thick|medium" },
      "apply": { "model": "zrm:block/post_medium_extension", "y": 90 }
    },
    {
      "when": { "south": "thick|medium" },
      "apply": { "model": "zrm:block/post_medium_extension", "y": 180 }
    },
    {
      "when": { "west": "thick|medium" },
      "apply": { "model": "zrm:block/post_medium_extension", "y": 270 }
    },
    {
      "when": { "down": "thin" },
      "apply": { "model": "zrm:block/post_thin_extension", "x": 90 }
    },
    {
      "when": { "up": "thin" },
      "apply": { "model": "zrm:block/post_thin_extension", "x": 270 }
    },
    {
      "when": { "north": "thin" },
      "apply": { "model": "zrm:block/post_thin_extension" }
    },
    {
      "when": { "east": "thin" },
      "apply": { "model": "zrm:block/post_thin_extension", "y": 90 }
    },
    {
      "when": { "south": "thin" },
      "apply": { "model": "zrm:block/post_thin_extension", "y": 180 }
    },
    {
      "when": { "west": "thin" },
      "apply": { "model": "zrm:block/post_thin_extension", "y": 270 }
    }
  ]
}